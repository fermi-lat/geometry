package geometry

use glast_settings v1
use CLHEP v1r4

include_path "${GEOMETRYROOT}"

macro   geometry_linkopts "-L ${GEOMETRYROOT}/${CMTCONFIG} -lgeometry"\
        VisualC         ""

macro_append Win32Debug   " ${GEOMETRYROOT}/${DebugDir}/geometrylib.lib"
macro_append Win32Release " ${GEOMETRYROOT}/${ReleaseDir}/geometrylib.lib"

path_append LD_LIBRARY_PATH "${GEOMETRYROOT}/${CMTCONFIG}"

private
library  geometry -no_share \
    Box.cxx             Cone.cxx        Conic.cxx\
    CoordTransform.cxx  Cylinder.cxx\
    GeomObject.cxx      Helix.cxx           Hexahedron.cxx\
    Hype.cxx            Hyperbolic.cxx      Intersection.cxx\
    Plane.cxx           Point.cxx           Ray.cxx\
    Shape.cxx           Sphe.cxx\
    Sphere.cxx          Surface.cxx         Track.cxx\
    Tube.cxx            Tubs.cxx            Vector.cxx \
    Volume.cxx          Wedge.cxx \
    ../geometry/*.h
